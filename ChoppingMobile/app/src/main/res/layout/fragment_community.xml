<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Community">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/communityLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="12"
        android:background="#FF9F0F">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:id="@+id/communityCategoryLayout">
            <Spinner
                android:id="@+id/searchOptSpinner"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                />
            <EditText
                android:id="@+id/communitySearchEdit"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:hint="Search..."
                />
            <Button
                android:id="@+id/communitySearchBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="검색"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/communityBodyLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10.5"
            android:weightSum="10"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <LinearLayout
                android:id="@+id/communityListLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical">
                <androidx.viewpager.widget.ViewPager
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/viewPager"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    >
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/communityBodyList"
                        />
                </ScrollView>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/communityToolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prevBtn"
                    android:layout_alignParentLeft="true"
                    android:text="이전"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/nextBtn"
                    android:text="다음"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/communityTailLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FF9F0F"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_alignParentRight="true"
                    android:id="@+id/communityMakePostBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="MakePost" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>