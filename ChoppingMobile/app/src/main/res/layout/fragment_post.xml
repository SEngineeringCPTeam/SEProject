<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/postPageMain"
        android:orientation="vertical"
        android:weightSum="6"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/postPageBody"
            android:orientation="vertical"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.viewpager.widget.ViewPager
                        android:layout_width="250dp"
                        android:layout_height="320dp"
                        android:id="@+id/postPageImage"
                        android:layout_marginTop="20dp"
                        android:background="#AAAAAA"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/postPageContent"
                        android:textSize="20dp"
                        android:text="Content"
                        />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/postPageCommentBody"
            android:weightSum="5"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.7"
                android:fillViewport="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ListView
                        android:id="@+id/commentList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </ScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3">
                <EditText
                    android:id="@+id/commentField"
                    android:hint="Comment"
                    android:layout_height="match_parent"
                    android:layout_width="300dp"
                    />
                <Button
                    android:id="@+id/commentSubmitBtn"
                    android:text="Submit"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/postPageCommercial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#0099D1"
            android:visibility="gone"
            >
            <TextView
                android:id="@+id/textView_costTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="#00C7F9"
                android:text="Cost: "
                android:textSize="50dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/postPageCostField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="000000"
                android:textSize="50dp"
                android:textStyle="bold"
                android:background="#9FF6F9"
                android:layout_toRightOf="@id/textView_costTitle"
                />
            <Button
                android:id="@+id/cartBtn"
                android:layout_below="@id/textView_costTitle"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Cart"
                android:textSize="50dp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/buyBtn"
                android:layout_below="@id/textView_costTitle"
                android:layout_alignParentRight="true"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="Buy"
                android:textSize="50dp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>