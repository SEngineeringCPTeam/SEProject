<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPage">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/userPageLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6"
        android:background="#0FFF9F">
        <LinearLayout
            android:id="@+id/userTapLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_margin="10dp">
            <TableLayout
                android:id="@+id/userDataTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/tempView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        />
                    <TextView
                        android:layout_below="@id/tempView"
                        android:layout_marginTop="40dp"
                        android:id="@+id/userPage_nameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="이름"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_below="@+id/userPage_nameText"
                        android:id="@+id/userPage_idText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="아이디"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_below="@id/userPage_idText"
                        android:id="@+id/userPage_authority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="권한"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        />
                    <Button
                        android:layout_marginTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/userPage_authority"
                        android:id="@+id/userPage_Edit"
                        android:text="Edit"
                        android:textSize="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/userPage_imageView"
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:background="#A6A6A6"
                        android:layout_margin="15dp"
                        />
                </RelativeLayout>
                <TableRow>
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="6"
            android:id="@+id/relateProductLayout"
            android:orientation="vertical"
            android:background="#AFFFAF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:id="@+id/postList"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="#FFFFFF">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    >
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/userPostView"
                        />
                </ScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:id="@+id/itemList"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:background="#FFFFFF">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    >
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/userItemView"
                        />
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>